{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "site": "sicurezza",
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/register.html"
      }
    ]
  }
}
